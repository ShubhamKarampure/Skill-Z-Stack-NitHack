# ==========================================
# NETWORK CONFIGURATION
# ==========================================
NETWORK=development
NODE_ENV=development

# Ganache Local Network
GANACHE_URL=http://localhost:7545
RPC_URL=http://localhost:7545

# Network ID (Ganache default)
NETWORK_ID=5777

# ==========================================
# BLOCKCHAIN ACCOUNT (Ganache)
# ==========================================
# Get this from Ganache - Click on the key icon next to any account
# Example: First account in Ganache usually has index 0
PRIVATE_KEY=0xYOUR_GANACHE_PRIVATE_KEY_HERE

# Or use the account address directly if needed
ADMIN_ADDRESS=0xYOUR_GANACHE_ACCOUNT_ADDRESS

# ==========================================
# GAS CONFIGURATION (Local Network)
# ==========================================
GAS_PRICE=20000000000
GAS_LIMIT=6721975

# ==========================================
# DATABASE
# ==========================================
MONGO_URI='MONGO_URI'

# ==========================================
# AUTHENTICATION
# ==========================================
JWT_SECRET=secretkey123

# ==========================================
# IPFS/PINATA (Optional for local testing)
# ==========================================
PINATA_API_KEY=
PINATA_SECRET_API_KEY=
# For local testing, you can use mock IPFS URIs or leave empty

# ==========================================
# SERVER CONFIGURATION
# ==========================================
PORT=3000
API_VERSION=v1

# ==========================================
# CORS
# ==========================================
CORS_ORIGIN=http://localhost:5173
# Add your frontend URL

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=debug
